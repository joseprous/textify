{
    "manifest_version": 2,
    "name": "textify",
    "version": "1.1",

    "description": "Extract the text of articles from selected domains",

    "background": {
        "scripts": ["background.js"]
    },
    
    "permissions": [
        "activeTab",
        "tabs"
    ],

    "page_action": {
        "default_icon": "icons/text_off32.png",
        "default_popup": "popup/popup.html",
        "default_title": "textify"
    }
    
}
